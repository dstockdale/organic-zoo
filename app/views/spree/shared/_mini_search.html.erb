<%= form_tag spree.products_path, :method => :get, class: "navbar-form navbar-right" do %>
  <div class="input-group">
    <%= search_field_tag :keywords, params[:keywords], :placeholder => Spree.t(:search), class: "form-control input-sm" %>
    <span class="input-group-btn">
      <button type="submit" class="search-submit btn btn-sm btn-default"><%= Spree.t(:search) %></button>
    </span>
  </div>
<% end %>